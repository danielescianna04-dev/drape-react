{
  "family": "warp-flutter-web-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "containerDefinitions": [
    {
      "name": "warp-flutter-container",
      "image": "cirrusci/flutter:stable",
      "essential": true,
      "command": [
        "sh",
        "-c",
        "apt-get update && apt-get install -y nodejs npm && npm install -g express && node /app/ecs-server.js"
      ],
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {"name": "PORT", "value": "3000"},
        {"name": "NODE_ENV", "value": "production"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/warp-flutter-service",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "executionRoleArn": "arn:aws:iam::703686967361:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::703686967361:role/ecsTaskExecutionRole"
}
