# Server
PORT=3001
NODE_ENV=development

# Docker
DOCKER_SERVERS=local                          # comma-separated: local,htz-1:5.9.xxx.xxx:2376
DOCKER_TLS_DIR=/etc/docker/tls               # TLS certs for remote Docker
DRAPE_WORKSPACE_IMAGE=drape-workspace:latest

# Data paths (NVMe)
PROJECTS_ROOT=/data/projects
PNPM_STORE_PATH=/data/pnpm-store
CACHE_ROOT=/data/cache

# Firebase (auth + user metadata only)
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json
GOOGLE_CLOUD_PROJECT=drape-mobile-ide

# AI Keys
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
GROQ_API_KEY=
OPENAI_API_KEY=

# GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Container defaults
CONTAINER_MEMORY_MB=4096
CONTAINER_CPUS=4
CONTAINER_IDLE_TIMEOUT_MS=1800000             # 30 minutes
